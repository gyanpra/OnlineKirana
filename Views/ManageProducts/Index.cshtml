@model IEnumerable<OnlineKirana.Models.Product>
@{ Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@Html.Raw(TempData["CreateMessage"])
@Html.Raw(TempData["UpdateMessage"])

<p>
    @Html.ActionLink("Create New", "Create")
</p>


<div class="card xl-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Product
        <a href="../ManageProducts/Create" class="btn btn-info pull-right fa fa-plus">Add New Item</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Product ID</th>
                        <th>Product Name</th>
                        <th>Category</th>
                        <th>Brand</th>
                        <th>Price</th>
                        <th>ReOrderLevel</th>
                        <th>QualityOnHand</th>
                        <th>Image</th>
                        <th>Operation</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.ProductID</td>
                        <td>@item.ProductName</td>
                        <td>@item.Category</td>
                        <td>@item.Brand</td>
                        <td>@item.Price</td>
                        <td>@item.ReOrderLevel</td>
                        <td>@item.QualityOnHand</td>
                        <td>
                            <img src="@Url.Content(item.ProductImage)" height="80" width="80"/>
                        </td>


                        <td>
                            <button type="button" class="btn btn-secondary">@Html.ActionLink("Edit", "Edit", new { id = item.ProductID })</button>
                            <button type="button" class="btn btn-dark">@Html.ActionLink("Details", "Details", new { id = item.ProductID })</button>
                            <button type="button" class="btn btn-danger">@Html.ActionLink("Delete", "Delete", new { id = item.ProductID })</button>
                            

                        </td>

                    </tr>
                }

                    </tbody>
                </table>
        </div>

    </div>
</div>


