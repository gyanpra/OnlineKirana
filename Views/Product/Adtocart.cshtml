
@model OnlineKirana.Models.Product
@{
    ViewBag.Title = "Adtocart";
}
<br />
<br />
<br />
<div style="background-color:coral;">
    @using (@Html.BeginForm())
    {<div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-4">
                    <img style="min-height:200px; width:200px;" src="@Url.Content(Model.ProductImage)" />
                </div>
                <div class="col-lg-8 col-md-8 col-sm-8">
                    <h1>Product Name: @Model.ProductName</h1>
                    <h2>Price: @Model.Price INR</h2>
                    <h6>Brand: @Model.Brand</h6>
                    <h6>Category: @Model.Category</h6>
                    <input type="number" name="qty" value="0" id="qty1" min="1" max="10" />
                    <input type="submit" value="Submit" class="btn btn-danger" />
                </div>
            </div>
        </div>

    }
</div>